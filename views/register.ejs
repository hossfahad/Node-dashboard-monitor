<%- errors %>
<form action="/users/register" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="name" id="name" name="name" class="form-input" placeholder="Enter Name" value="" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-input" placeholder="Enter Email" value="" />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-input" placeholder="Create Password" minlength="6" />
    </div>
    <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input type="password" id="password2" name="password2" class="form-input" placeholder="Confirm Password"
            minlength="6" />
    </div>
    <button type="submit">Login</button>
</form>
<p>Already Have An Account? <a href="/users/login">Login</a></p>